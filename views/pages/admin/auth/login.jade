    title Servet Toprak | Diş Kliniği
// wrapper
.wrapper
    .section-authentication-signin.d-flex.align-items-center.justify-content-center.my-5.my-lg-0
        .container
            .row.row-cols-1.row-cols-lg-2.row-cols-xl-3
                .col.mx-auto
                    .card.mb-0
                        .card-body
                            .p-4
                                .mb-3.text-center
                                    img(src='/assets/images/logo-icon.png' width='60' alt='')
                                .text-center.mb-4
                                    h5 Servet Toprak
                                    p.mb-0 Lütfen hesabınıza giriş yapın
                                .form-body
                                    form.row.g-3
                                        .col-12
                                            label.form-label(for='inputEmailAddress') E-Posta Adresi
                                            input#inputEmailAddress.form-control(type='email' placeholder='servettoprak@gmail.com')
                                        .col-12
                                            label.form-label(for='inputChoosePassword') Parola
                                            #show_hide_password.input-group
                                                input#inputChoosePassword.form-control.border-end-0(type='password' placeholder='Parolanızı Girin')
                                                a.input-group-text.bg-transparent(href='javascript:;')
                                                    i.bx.bx-hide
                                        .col-md-6
                                            .form-check.form-switch
                                                input#flexSwitchCheckChecked.form-check-input(type='checkbox' checked)
                                                label.form-check-label(for='flexSwitchCheckChecked') Beni Hatırla
                                        .col-md-6.text-end
                                            a(href='/Admin/ForgotPassword') Şifremi Unuttum
                                        .col-12
                                            .d-grid
                                                button.btn.btn-primary(type='submit') Giriş Yap
// end wrapper
