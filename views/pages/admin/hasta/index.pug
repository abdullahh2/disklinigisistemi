block jscode
    script(src="/assets/plugins/datatable/js/jquery.dataTables.min.js") 
    script(src="/assets/plugins/datatable/js/dataTables.bootstrap5.min.js")
    script.
        $(document).ready(function (){
            $('.hasta-sil').on('click', function () {
                var hastaId = $(this).attr('data-id');
                var url = '/Admin/Hastalar/Sil';
                var sor = confirm('Bu hastayı silmek istiyor musunuz?');
                if (sor) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: {
                            hastaid: hastaId
                        },
                        success: function (result) {
                            location.reload();
                        }
                    });
                }
            })
            $('#hastalar').DataTable( {
                lengthChange: false,
                language: {
                    url: "https://cdn.datatables.net/plug-ins/2.3.2/i18n/tr.json",
                },
                columnDefs: [
                    {
                        "targets": 4,
                        "render": function ( data, type, row ) {
                            var fullText = data;
                            if (type === 'display' && fullText.length > 100) {
                                return '<span title="' + fullText + '">' + fullText.substr( 0, 100 ) + '…</span>';
                            }
                            return fullText;
                        }
                    }
                ]
            });
        })