.switcher-wrapper
    .switcher-btn
        i.bx.bx-cog.bx-spin
    .switcher-body
        .d-flex.align-items-center
            h5.mb-0.text-uppercase Tema Özelleştirici
            button.btn-close.ms-auto.close-switcher(type='button' aria-label='Close')
        hr
        h6.mb-0 Tema
        .d-flex.align-items-center.justify-content-between
            .form-check
                input#lightmode.form-check-input(type='radio' name='flexRadioDefault' checked='')
                label.form-check-label(for='lightmode') Aydınlık
            .form-check
                input#darkmode.form-check-input(type='radio' name='flexRadioDefault')
                label.form-check-label(for='darkmode') Karanlık
            .form-check
                input#semidark.form-check-input(type='radio' name='flexRadioDefault')
                label.form-check-label(for='semidark') Yarı karanlık
        hr
        .form-check
            input#minimaltheme.form-check-input(type='radio' name='flexRadioDefault')
            label.form-check-label(for='minimaltheme') Minimal Tema
        hr
        h6.mb-0 Başlık Renkleri
